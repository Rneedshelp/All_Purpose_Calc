<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   tools:context=".DegreeActivity">

    <include
            android:id="@+id/app_toolbar"
            layout="@layout/app_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:theme="@style/custom_bar">

    </include>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/degree_input"
            android:hint="Enter Temperature" android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/app_toolbar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Degrees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/degree_input_text"
            android:textSize="24sp" android:layout_marginTop="42dp"
            app:layout_constraintTop_toBottomOf="@+id/app_toolbar"
            app:layout_constraintStart_toEndOf="@+id/degree_input" android:layout_marginStart="18dp"/>
    <Button
            android:text="CONVERT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/degree_input" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="143dp"/>
    <TextView
            android:text="0 Celcius = 0 F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Celcius_result"
            android:textSize="24sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="112dp"
            android:layout_marginTop="168dp" app:layout_constraintTop_toBottomOf="@+id/degree_input"/>
    <TextView
            android:text="0 Fahrenheit = 0 C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/fahreneit_result"
            android:textSize="24sp"
            android:layout_marginTop="316dp"
            app:layout_constraintTop_toBottomOf="@+id/app_toolbar" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="96dp"/>

</android.support.constraint.ConstraintLayout>