<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BMIActivity" android:id="@+id/ConstraintLayout">
    <include
            android:id="@+id/app_toolbar"
            layout="@layout/app_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            app:theme="@style/custom_bar">

    </include>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/BMI_Feet_Input"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/app_toolbar"
            app:layout_constraintVertical_bias="0.158" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="-2dp" app:layout_constraintHorizontal_bias="0.072" android:hint="Feet"
            android:textSize="14sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/BMI_Inch_Input"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/app_toolbar"
            app:layout_constraintVertical_bias="0.158" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="-2dp" app:layout_constraintHorizontal_bias="0.922" android:hint="Inches"
            android:textSize="14sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/BMI_Weight_Input"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/app_toolbar"
            app:layout_constraintVertical_bias="0.438" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="-2dp" app:layout_constraintHorizontal_bias="0.072" android:hint="Lbs"
            android:textSize="14sp"/>
    <TextView
            android:text="Enter Your Height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/BMI_Height_Text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="452dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="203dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="19dp"
            app:layout_constraintHorizontal_bias="0.2" android:textSize="24sp" android:fontFamily="sans-serif"
            android:textAlignment="textStart"/>
    <TextView
            android:text="Enter Your Weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/BMI_Weight_Text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="328dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="203dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="19dp"
            app:layout_constraintHorizontal_bias="0.103" android:textSize="24sp" android:fontFamily="sans-serif"
            android:textAlignment="textStart"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp" android:id="@+id/BMI_Result"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:fontFamily="sans-serif"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="419dp"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="180dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="187dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Your BMI is:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/BMI_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="116dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="240dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textSize="24sp" android:fontFamily="sans-serif"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
            app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Calculate BMI"
            android:layout_width="127dp"
            android:layout_height="wrap_content" android:id="@+id/BMI_button"
            android:layout_marginTop="168dp"
            app:layout_constraintTop_toBottomOf="@+id/BMI_Inch_Input" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            style="@style/Widget.AppCompat.Button.Colored" android:background="@color/colorPrimaryDark"
            android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="111dp"
            app:layout_constraintHorizontal_bias="0.846"
            android:fontFamily="sans-serif-condensed"/>
</android.support.constraint.ConstraintLayout>